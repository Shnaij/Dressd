<div class="outfits">
  <div class="card-details-small">
    <h2 class="card-title"><%= outfit.title %></h2>
    <%= cl_image_tag outfit.items.find_by_category("Tops").photo.key, class: "outfit-image" %>
    <%= cl_image_tag outfit.items.find_by_category("Bottoms").photo.key, class: "outfit-image" %>
    <%= cl_image_tag outfit.items.find_by_category("Shoes").photo.key, class: "outfit-image" %>
    <div class="remove-outfit-link">
      <%= link_to outfit_path(outfit), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
        <i class="fa-solid fa-x" style="color: #D4B2A6;"></i>
      <% end %>
    </div>
  </div>
</div>
