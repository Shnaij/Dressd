<div class="banner">
  <h1 class="text-center">My Closet</h1>
</div>

<div class="container">
  <%= form_with(url: items_path, method: :get, class: "button") do |f| %>
    <%= f.search_field :query, class: "search-field", placeholder: "Search items..." %>
    <%= f.submit "Search closet", class: "beige-button" %>
  <% end %>

  <div class="filter-sort">
    <%= form_tag(items_path, method: :get) do %>
      <%= select_tag(:category, options_for_select(Item.distinct.pluck(:category)), include_blank: 'Categories', class: 'beige-button') %>
      <%= select_tag(:color, options_for_select(Item.distinct.pluck(:color)), include_blank: 'Colors', class: 'beige-button') %>
      <%= submit_tag 'Filter', class: 'beige-button' %>
    <% end %>
  </div>

  <% if @items.any? %>
    <% if @dresses.any? %>
      <div class="items-container">
        <h1>Dresses</h1>
        <div class="card-grid-container">
          <% @dresses.each_with_index do |dress, i| %>
            <%= link_to new_outfit_path, class: "text-decoration-none" do %>
              <div class="card">
                <% if dress.photo.attached? %>
                  <%= cl_image_tag dress.photo.key, height: 200, class: "card-image" %>
                <% end %>
                <div class="card-details">
                  <h2 class="card-title">Title: <%= dress.title %></h2>
                  <p class="card-p">Brand: <%= dress.brand %></p>
                  <p class="card-p">Color: <%= dress.color %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @tops.any? %>
      <div class="items-container">
        <h1>Tops</h1>
        <div class="card-grid-container">
          <% @tops.each_with_index do |top, i| %>
            <%= link_to new_outfit_path, class: "text-decoration-none" do %>
              <div class="card">
                <% if top.photo.attached? %>
                  <%= cl_image_tag top.photo.key, height: 200, class: "card-image" %>
                <% end %>
                <div class="card-details">
                  <h2 class="card-title"><%= top.title %></h2>
                  <p class="card-p"><%= top.brand %></p>
                  <p class="card-p"><%= top.color %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @bottoms.any? %>
      <div class="items-container">
        <h1>Bottoms</h1>
        <div class="card-grid-container">
          <% @bottoms.each_with_index do |bottom, i| %>
            <%= link_to new_outfit_path, class: "text-decoration-none" do %>
              <div class="card">
                <% if bottom.photo.attached? %>
                  <%= cl_image_tag bottom.photo.key, height: 200, class: "card-image" %>
                <% end %>
                <div class="card-details">
                  <h2 class="card-title"><%= bottom.title %></h2>
                  <p class="card-p"><%= bottom.brand %></p>
                  <p class="card-p"><%= bottom.color %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @shoes.any? %>
      <div class="items-container">
        <h1>Shoes</h1>
        <div class="card-grid-container">
          <% @shoes.each_with_index do |pair, i| %>
            <%= link_to new_outfit_path, class: "text-decoration-none" do %>
              <div class="card">
                <% if pair.photo.attached? %>
                  <%= cl_image_tag pair.photo.key, height: 200, class: "card-image" %>
                <% end %>
                <div class="card-details">
                  <h2 class="card-title"><%= pair.title %></h2>
                  <p class="card-p"><%= pair.brand %></p>
                  <p class="card-p"><%= pair.color %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

  <% else %>
    <em>Sorry, nothing matches your search.</em>
  <% end %>
</div>
