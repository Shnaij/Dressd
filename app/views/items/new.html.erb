<div class="banner">
  <%= link_to root_path do %>
    <%= image_tag("dressd-logo.png", alt: "Logo", class: "banner-logo") %>
  <% end %>
  <h1 class="text-center">New Items</h1>
</div>

<div class="back-button" style="margin-top: -20px; margin-bottom: -20px;">
  <%= link_to "Go Back", outfits_path, class: "back-button" %>
</div>

<div class="container padding-bottom">
  <h3 class="text-center my-5">Add the details of your clothing item to upload it to your digital wardrobe</h3>
  <%= simple_form_for(@item) do |f| %>
    <%= f.input :photo, as: :file, label: 'Upload one image of the item lying flat on a white background', input_html: { class: 'input-color' }%>
    <%= f.input :title, label: 'What will you name this item?', input_html: { class: 'input-color' } %>
    <%= f.input :brand, label: 'What is the brand name?', input_html: { class: 'input-color' } %>
    <%= f.input :color, label: 'What is the color?', input_html: { class: 'input-color' } %>
    <%= f.input :category, collection: Item::CATEGORIES, input_html: { class: 'input-color' } %>
    <%= f.input :original_price, label: 'Original price in $', input_html: { class: 'input-color' } %>
    <%= f.button :submit, label: 'Save', class: 'pink-button my-3' %>
  <% end %>
</div>
