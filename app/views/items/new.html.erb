<div class="banner-container">
  <h1 class="center-text">Upload a clothing item to your digital wardrobe</h1>
</div>

<div class="container my-5">
  <h3 class="center-text">Add product details</h3>
  <%= simple_form_for(@item) do |f| %>
    <%= f.input :photo, as: :file, label: 'Upload one image of the item lying flat on a white background' %>
    <%= f.input :title, label: 'What will you name this item?' %>
    <%= f.input :brand, label: 'What is the brand name?' %>
    <%= f.input :color, label: 'What is the color?' %>
    <%= f.input :category, collection: Item::CATEGORIES %>
    <%= f.input :original_price, label: 'Original price in $' %>
    <%= f.button :submit, label: 'Save', class: 'yellow-button' %>
  <% end %>
</div>
