<div class="banner">
  <%= link_to items_path do %>
    <%= image_tag("dressd-logo.png", alt: "Logo", class: "banner-logo") %>
  <% end %>
  <h1>Shnai's Profile</h1>
</div>

<div class="container padding-bottom">
  <div class="header-weather">
    <div class="logo">
      <%= image_tag("weather.png", alt: "Logo", class: "logo-image") %>
    </div>
    <p class="pink-button">Cloudy with a chance of rain</p>
  </div>

  <div class="button-container">
    <div class="left-button">
      <%= link_to "Dress Me", new_outfit_path, class: "beige-button" %>
    </div>
    <div class="right-button">
      <button class="beige-button">Friends</button>
    </div>
  </div>

  <div class="card-details">
      <div class="new-card">
        <h2>My Items</h2>
        <div class="back-button" style="margin-top: -20px; margin-bottom: -20px;">
          <%= link_to "See All", items_path, class: "back-button" %>
          <div class="d-flex">
            <%= cl_image_tag @items.first.photo.key, height: 200, class: "card-image" %>
            <%= cl_image_tag @items.second.photo.key, height: 200, class: "card-image" %>
          </div>
        </div>
     </div>
  </div>



  <div class="card-details">
     <div class="new-card">
        <h2>My Outfits</h2>
        <div class="back-button" style="margin-top: -20px; margin-bottom: -20px;">
          <%= link_to "See All", outfits_path, class: "back-button" %>
          <div class="d-flex">
            <%= cl_image_tag @items.first.photo.key, height: 200, class: "card-image" %>
            <%= cl_image_tag @items.second.photo.key, height: 200, class: "card-image" %>
          </div>
        </div>
      </div>
  </div>
</div>
