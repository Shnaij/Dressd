<div class="banner">
  <%= link_to root_path do %>
    <%= image_tag("dressd-logo.png", alt: "Logo", class: "banner-logo") %>
  <% end %>
  <h1 class="text-center">Your Outfits</h1>
</div>

<div class="container">
  <div class="back-button" style="margin-top: -20px; margin-bottom: -20px;">
    <%= link_to "Go Back", new_outfit_path, class: "back-button" %>
  </div>

  <%= form_with(url: items_path, method: :get, class: "search-container my-2") do |f| %>
    <%= f.search_field :query, class: "search-field", placeholder: "Search items..." %>
    <%= f.submit "Search", class: "search-button" %>
  <% end %>

  <% if @outfits.any? %>
    <div class="outfits-container mt-4">

      <div class="outfits">

        <div class="card-details-small">
          <h2 class="card-title">Outfit title placeholder</h2>
          <p class="card-p">Outfit style placeholder</p>
        </div>
      </div>
      <div class="outfits">
        <div class="card-details-small">
          <h2 class="card-title">Outfit title placeholder</h2>
          <p class="card-p">Outfit style placeholder</p>
        </div>
      </div>
    </div>
  </div>

  <% else %>
    <em>You have no saved outfits yet, create one from the </em>
  <% end %>
