<div class="page-container">
  <div class="banner">
    <%= link_to root_path do %>
      <%= image_tag("dressd-logo.png", alt: "Logo", class: "banner-logo") %>
    <% end %>
    <h1 class="text-center">Your Outfits</h1>
  </div>

  <%= form_with(url: outfits_path, method: :get, class: "search-container my-2") do |f| %>
    <%= f.search_field :query, class: "search-field", placeholder: "Search outfits..." %>
    <%= f.submit "Search", class: "search-button" %>
  <% end %>

  <% if @outfits.any? %>
    <div class="outfits-container mt-4">
      <% @outfits.each do |outfit| %>
        <%= render 'shared/outfit', outfit: outfit %>
      <% end %>
    </div>
  <% elsif params[:query] %>
    <em>You have no saved outfits matching your search</em>
  <% else %>
    <em>You have no saved outfits yet, create one from the Dress me on your profile!</em>
  <% end %>
</div>
