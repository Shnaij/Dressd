<div class="outfit-card" style="margin-top: 1px; margin-bottom: 1px;" data-controller="lock-carousel" data-filtering-target="<%= category.downcase %>">
  <% if message %>
    <p class="no-style-message"><%= message %></p>
  <% end %>
  <div class="items-selections">
    <p data-action="click->lock-carousel#lock"><i class="fa-solid fa-unlock"></i></p>
    <div id="carousel<%= category %>" class="carousel slide">
      <div class="carousel-inner" style="margin-top: 5px;">
        <% items.each_with_index do |item, index| %>
          <div class="carousel-item <%= 'active' if index.zero? %> <%= category.downcase.singularize %>-value" data-<%= category.downcase.singularize %>-id="<%= item.id %>" data-lock-carousel-target="item">
            <img src="<%= cl_image_path item.photo.key %>" class="d-block w-100 cropped-<%= category.downcase %>" alt=<%= category.downcase %>>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= category %>" data-bs-slide="prev" data-lock-carousel-target="arrow">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= category %>" data-bs-slide="next" data-lock-carousel-target="arrow">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>
